        xmlns:local="clr-namespace:JSONRandomSeat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,0,-3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnRollSheet" Content="Select Roll Sheet" HorizontalAlignment="Left" Margin="63,178,0,0" VerticalAlignment="Top" Width="108" Height="32" Click="btnRollSheet_Click"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="44" Margin="50,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <Button x:Name="btnAssign" Content="Assign Seats" HorizontalAlignment="Left" Margin="332,279,0,0" VerticalAlignment="Top" Width="108" Height="32" Click="Button_Click"/>
        <ListBox HorizontalAlignment="Left" Height="252" Margin="276,19,0,0" VerticalAlignment="Top" Width="214"/>
        <Label Content="Random Seat Assigner" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Height="50" Width="194" FontSize="18"/>


    </Grid>
</Window>
